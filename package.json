{
    "name": "a-rent",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^13.5.0",
        "@types/axios": "^0.14.0",
        "@types/cors": "^2.8.14",
        "@types/express": "^4.17.17",
        "@types/jest": "^27.5.2",
        "@types/morgan": "^1.9.5",
        "@types/node": "^16.18.11",
        "@types/react": "^18.0.27",
        "@types/react-dom": "^18.0.10",
        "axios": "^1.4.0",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "eslint": "^8.49.0",
        "express": "^4.18.2",
        "morgan": "^1.10.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-query": "^3.39.3",
        "react-scripts": "5.0.1",
        "styled-components": "^5.3.6",
        "typescript": "^5.2.2",
        "web-vitals": "^2.1.4"
    },
    "scripts": {
        "start": "react-scripts start",
        "mock-server": "json-server --watch src/mock-server/index.js --port 4200",
        "dev": "yarn start & yarn mock-server",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "coverage": "react-scripts test --coverage --watchAll",
        "eject": "react-scripts eject",
        "lint": "eslint ./ --ext js,jsx,ts,tsx --ignore-path .gitignore",
        "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx . --ignore-path .gitignore",
        "prettier-format": "prettier --config .prettierrc 'src/**/*.tsx' --write",
        "prepare": "husky install",
        "precommit": "lint-staged"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@types/styled-components": "^5.1.26",
        "@typescript-eslint/eslint-plugin": "^5.48.2",
        "@typescript-eslint/parser": "^5.48.2",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jest": "^27.2.1",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-react": "^7.32.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "husky": "^8.0.3",
        "json-server": "^0.17.1",
        "lint-staged": "^13.1.0",
        "prettier": "^2.8.3",
        "prettier-eslint": "^15.0.1",
        "prettier-eslint-cli": "^7.1.0",
        "react-router-dom": "^6.15.0"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,css,md}": [
            "prettier --write",
            "eslint --fix --ext .js,.jsx,.ts,.tsx . --ignore-path .gitignore"
        ]
    },
    "jest": {
        "collectCoverageFrom": [
            "src/components/**/*.{js,jsx,ts,tsx}",
            "!src/components/**/*.{types,stories,constants,test,spec}.{js,jsx,ts,tsx}"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 80,
                "functions": 80,
                "lines": 80,
                "statements": 80
            }
        }
    }
}
